<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head", {title: "Tifosi"}) %>
</head>
<body>
    <!-- ******************************** HEADER ******************************** -->
    <%- include("partials/header") %>
    <!-- ******************************** END HEADER ******************************** -->

    <main class="crearProductMain">
        <form class="crearProductForm" id="editCategoryForm" action="/editar/motoenvio/<%= motoenvio.id %>?_method=put" method="post" enctype="application/x-www-form-urlencoded">
            <div class="createProductLabelAndInputContainer">
                <label class="createProductLabel" for="newMotoenvioPrice">Editar motoenvio</label>
                <input class="createProductInput" type="number" name="newMotoenvioPrice" id="newMotoenvioPrice" value="<%= motoenvio.price %>" maxlength="50">
            </div>

            <button class="crearProductoButton" type="submit">EDITAR MOTOENVIO</button>
        </form>
    </main>

    <!-- ******************************** FOOTER ******************************** -->
    <%- include("partials/footer") %>
    <!-- ******************************** END FOOTER ******************************** -->
</body>
</html>