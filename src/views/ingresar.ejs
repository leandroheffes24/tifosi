    <!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head", {title: "Futbol e-commerce"}) %>
</head>
<body>
    <main class="registroMain">
        <section class="registerFormSection">
            <div class="registerContainer">
                <div class="registroImageContainer">
                    <a href="/">
                        <img class="registroLogo" src="/images/exampleLogo.png" alt="">
                    </a>
                </div>
        
                <div class="registroTextContainer">
                    <span class="registroCreateAccountText">Ingresa a tu cuenta.</span>
                    <span class="registroLoginText"><a class="registroLoginLink" href="/registro">Registrate</a> si no tienes una.</span>
                </div>
        
                <form class="registroForm" id="registroForm" method="post" action="/ingresar" enctype="application/x-www-form-urlencoded">    
                    <div class="registroFormLabelAndInputContainer">
                        <label class="registroLabel" for="email">E-mail</label>
                        <input class="registroInput" maxlength="80" type="email" id="email" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : "" %>">
                        <span class="frontendRegistroError" id="emailError"></span>
                        <% if (locals.errors && errors.email) { %>
                            <span class="backendRegistroError"><%= errors.email.msg %></span>
                        <% } %>
                    </div>
    
                    <div class="registroFormLabelAndInputContainer">
                        <label class="registroLabel" for="password">Contrase√±a</label>
                        <input class="registroInput" type="password" id="password" name="password" maxlength="40">
                        <span class="frontendRegistroError" id="passwordError"></span>
                        <% if (locals.errors && errors.password) { %>
                            <span class="backendRegistroError"><%= errors.password.msg %></span>
                        <% } %>
                    </div>

                    <div class="rememberLoginLabelAndInputContainer">
                        <label class="registroLabel rememberLoginLabel" for="remember">Recordame</label>
                        <input class="rememberLoginInput" type="checkbox" name="remember" id="remember">
                    </div>
    
                    <button class="registerButton" type="submit">INGRESAR</button>
                </form>
            </div>
        </section>

        <section class="registerImageSection loginImageSection">
        </section>
    </main>
</body>
</html>
</body>
</html>