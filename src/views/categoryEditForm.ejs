<!DOCTYPE html>
<html lang="es">
<head>
    <%- include("partials/head", {title: "Tifosi"}) %>
</head>
<body>
    <!-- ******************************** HEADER ******************************** -->
    <%- include("partials/header") %>
    <!-- ******************************** END HEADER ******************************** -->

    <main class="crearProductMain">
        <form class="crearProductForm" id="editCategoryForm" action="/editar/categoria/<%= categoryToEdit.id %>?_method=put" method="post" enctype="application/x-www-form-urlencoded">
            <div class="createProductLabelAndInputContainer">
                <label class="createProductLabel" for="newCategoryName">Editar categoría</label>
                <input class="createProductInput" type="text" name="newCategoryName" id="newCategoryName" value="<%= categoryToEdit.name %>" maxlength="50">
            </div>

            <button class="crearProductoButton" type="submit">EDITAR CATEGORÍA</button>
        </form>
    </main>

    <!-- ******************************** FOOTER ******************************** -->
    <%- include("partials/footer") %>
    <!-- ******************************** END FOOTER ******************************** -->
</body>
</html>